@using WorkoutTracker_client
@{
    string ver = "dt=" + DateTime.Now.ToString("ddHHmm");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkoutTracker client</title>
    <script src="~/assets/js/color-modes.js"></script>
    <link rel="stylesheet" href="~/css/site.css?@ver" />
    <link rel="stylesheet" href="~/dist/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/dist/fontawesome-free/css/all.css" />
</head>
<body>
    <script src="~/js/site.js"></script>
    <script src="~/dist/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/jquery/jquery.min.js"></script>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WorkoutTracker client</a> *@
                <a class="navbar-brand h3 mb-3 fw-normal" href="@Url.Content("~/")">WorkoutTracker client</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item d-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark done" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - WorkoutTracker client <a asp-area="" asp-controller="Home" asp-action="Privacy" class="d-none">Privacy</a>
        </div>
    </footer>
</body>
</html>
